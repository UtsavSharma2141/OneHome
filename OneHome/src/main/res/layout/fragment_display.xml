<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/display_frag"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white">


    <TextView
        android:layout_width="280sp"
        android:layout_height="50sp"
        android:layout_above="@+id/checkoption"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="66dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="23dp"
        android:fontFamily="@font/pixel_font"
        android:gravity="center"
        android:text="@string/LCDTitle"
        android:textColor="@color/green"
        android:textSize="23sp">

    </TextView>

    <CheckBox
        android:id="@+id/checkoption"
        android:layout_width="275sp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/option2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/pixel_font"
        android:text="@string/LcdOption1"
        android:textColor="@color/green" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/option2"
        android:layout_width="375sp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/option3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/pixel_font"
        android:minHeight="50sp"
        android:text="@string/LcdOption2"
        android:textColor="@color/green"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/option3"
        android:layout_width="375sp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/option4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/pixel_font"
        android:minHeight="48dp"
        android:text="@string/LcdOption3"
        android:textColor="@color/green"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/option4"
        android:layout_width="375sp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/option5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/pixel_font"
        android:minHeight="50sp"
        android:text="@string/LcdOption4"
        android:textColor="@color/green" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/option5"
        android:layout_width="375sp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="85dp"
        android:fontFamily="@font/pixel_font"
        android:minHeight="50sp"
        android:text="@string/LcdOption5"
        android:textColor="@color/green" />

    <EditText
        android:id="@+id/edit"
        android:layout_width="295sp"
        android:layout_height="55sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:layout_toStartOf="@+id/EnterButton"
        android:hint="@string/InputLcd"
        android:maxLength="12"
        android:textColor="@color/green" />

    <Button
        android:id="@+id/EnterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="20sp"
        android:textColor="@color/green"
        android:backgroundTintMode="@color/white"
        android:fontFamily="@font/pixel_font"
        android:text="@string/EnterButtonText" />


</RelativeLayout>