<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="90sp"
        android:layout_marginEnd="90sp"
        android:layout_marginBottom="630sp"
        android:gravity="center"
        android:textColor="@color/amber"
        android:text="Settings"
        android:fontFamily="@font/tommy_soft"
        android:textSize="30dp">

    </TextView>

    <Button
        android:id="@+id/button2"
        android:layout_width="170sp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="125sp"
        android:layout_marginEnd="125sp"
        android:layout_marginBottom="145sp"
        android:textColor="@color/amber"
        android:fontFamily="@font/tommy_soft"
        android:backgroundTintMode="@color/white"
        android:text="Yes" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="320sp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_pirates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:textColor="@color/amber"
            android:fontFamily="@font/tommy_soft"
            android:textSize="20sp"
            android:text="English" />

        <RadioButton
            android:id="@+id/radio_ninjas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:textColor="@color/amber"
            android:fontFamily="@font/tommy_soft"
            android:textSize="20sp"
            android:text="French" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView"
        android:layout_width="210sp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="105sp"
        android:layout_marginBottom="210sp"
        android:gravity="center"
        android:textColor="@color/amber"
        android:fontFamily="@font/tommy_soft"
        android:text="Sign Out?"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="405sp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0sp"
        android:layout_marginBottom="415dp"
        android:textColor="@color/amber"
        android:fontFamily="@font/tommy_soft"
        android:text="Change Language"
        android:textSize="25sp" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="490sp"
        android:fontFamily="@font/tommy_soft"
        android:minHeight="50sp"
        android:text="Dark Mode"
        android:textColor="@color/amber"
        android:textSize="25sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="145sp"
        android:layout_marginBottom="10sp"
        android:textColor="@color/amber"
        android:backgroundTintMode="@color/white"
        android:fontFamily="@font/tommy_soft"
        android:text="Reset App" />

</RelativeLayout>