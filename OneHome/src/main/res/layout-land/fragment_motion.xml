<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/amber">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="225dp"
        android:layout_height="109dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="259dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="247dp"
        android:layout_marginBottom="286dp"
        app:srcCompat="@drawable/alarm_icon" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="324dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="211dp"
        android:layout_marginTop="131dp"
        android:layout_marginEnd="196dp"
        android:layout_marginBottom="222dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="30dp"
        android:text="Motion Alarm Control" />

    <TextView
        android:id="@+id/position_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="347dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="326dp"
        android:layout_marginBottom="192dp"
        android:text="Position" />

    <Switch
        android:id="@+id/ToggleSwitch"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="282dp"
        android:layout_marginTop="217dp"
        android:layout_marginEnd="272dp"
        android:layout_marginBottom="151dp"
        android:textStyle="bold"
        android:text="Sensor ON/OFF" />

    <Button
        android:id="@+id/SetTimeButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="131dp"
        android:layout_marginTop="255dp"
        android:layout_marginEnd="507dp"
        android:layout_marginBottom="108dp"
        android:textAlignment="center"
        android:text="SET" />

    <Button
        android:id="@+id/ResetTimeButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="530dp"
        android:layout_marginTop="255dp"
        android:layout_marginEnd="108dp"
        android:textAlignment="center"
        android:layout_marginBottom="108dp"
        android:text="RESET" />

    <Button
        android:id="@+id/EmergencyButton"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="247dp"
        android:layout_marginTop="338dp"
        android:layout_marginEnd="225dp"
        android:layout_marginBottom="25dp"
        android:textAlignment="center"
        android:text="Emergency Call" />
</RelativeLayout>