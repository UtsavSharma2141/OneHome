<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/display_frag"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:layout_width="280sp"
        android:layout_height="50sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="65sp"
        android:layout_marginEnd="65sp"
        android:layout_marginBottom="650sp"
        android:text="@string/LCDTitle"
        android:textColor="@color/green"
        android:fontFamily="@font/pixel_font"
        android:gravity="center"
        android:textSize="23sp">

    </TextView>

    <CheckBox
        android:id="@+id/option1"
        android:layout_width="275sp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="65sp"
        android:layout_marginBottom="595sp"
        android:fontFamily="@font/pixel_font"
        android:text="@string/LcdOption1"
        android:textColor="@color/green" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/option2"
        android:layout_width="375sp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20sp"
        android:layout_marginTop="455sp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="230sp"
        android:fontFamily="@font/pixel_font"
        android:minHeight="48dp"
        android:text="@string/LcdOption2"
        android:textColor="@color/green"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />


    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/option3"
        android:layout_width="375sp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20sp"
        android:layout_marginTop="405sp"
        android:layout_marginEnd="20sp"
        android:minHeight="50sp"
        android:textColor="@color/green"
        android:text="@string/LcdOption3"
        android:fontFamily="@font/pixel_font"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/option4"
        android:layout_width="375sp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="175sp"
        android:minHeight="50sp"
        android:textColor="@color/green"
        android:fontFamily="@font/pixel_font"
        android:text="@string/LcdOption4" />


    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/option5"
        android:layout_width="375sp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="115sp"
        android:minHeight="50sp"
        android:textColor="@color/green"
        android:fontFamily="@font/pixel_font"
        android:text="@string/LcdOption5" />

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="295sp"
        android:layout_height="55sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="105sp"
        android:layout_marginBottom="20sp"
        android:textColor="@color/green"
        android:hint="@string/InputLcd"
        android:maxLength="12"/>

    <Button
        android:id="@+id/EnterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="20sp"
        android:textColor="@color/green"
        android:backgroundTintMode="@color/white"
        android:fontFamily="@font/pixel_font"
        android:text="@string/EnterButtonText" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="343dp"
        app:srcCompat="@drawable/lcd_display" />


</RelativeLayout>