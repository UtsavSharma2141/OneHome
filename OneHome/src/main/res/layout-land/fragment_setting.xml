<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="77dp"
        android:layout_marginEnd="102dp"
        android:layout_marginBottom="475dp"
        android:fontFamily="@font/tommy_soft"
        android:gravity="center"
        android:text="@string/SettingsTitleText"
        android:textColor="@color/amber"
        android:textSize="30sp">

    </TextView>

    <Button
        android:id="@+id/SignOutButton"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="516dp"
        android:layout_marginBottom="12dp"
        android:backgroundTintMode="@color/white"
        android:fontFamily="@font/tommy_soft"
        android:text="@string/SignOutButton"
        android:textColor="@color/amber" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="320sp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/EnglishRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tommy_soft"
            android:text="@string/EnglishRadio"
            android:textColor="@color/amber"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/FrenchRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tommy_soft"
            android:text="@string/FrenchRadio"
            android:textColor="@color/amber"
            android:textSize="20sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/SignOut"
        android:layout_width="210sp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="508dp"
        android:layout_marginBottom="59dp"
        android:fontFamily="@font/tommy_soft"
        android:gravity="center"
        android:text="@string/SignOutText"
        android:textColor="@color/amber"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/ChangeLan"
        android:layout_width="405sp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="668dp"
        android:layout_marginBottom="419dp"
        android:fontFamily="@font/tommy_soft"
        android:text="@string/ChangeLanguageText"
        android:textColor="@color/amber"
        android:textSize="25sp" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/DarkModeSwitch"
        android:layout_width="694dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="256dp"
        android:fontFamily="@font/tommy_soft"
        android:minHeight="50sp"
        android:text="@string/DarkModeText"
        android:textColor="@color/amber"
        android:textSize="25sp" />

    <Button
        android:id="@+id/ResetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="13dp"
        android:backgroundTintMode="@color/white"
        android:fontFamily="@font/tommy_soft"
        android:text="@string/ResetAppButton"
        android:textColor="@color/amber" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="123dp"
        android:text="@string/LockScreenButton" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="234dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="491dp"
        android:layout_marginBottom="139dp"
        android:fontFamily="@font/tommy_soft"
        android:text="@string/LockScreenOption"
        android:textColor="@color/amber"
        android:textSize="22sp" />

</RelativeLayout>