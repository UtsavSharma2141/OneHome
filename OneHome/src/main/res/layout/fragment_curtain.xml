<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/curtainbackground">


    <TextView
        android:layout_width="152dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="152dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="107dp"
        android:layout_marginBottom="519dp"
        android:text="@string/curtain_header"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/OpenButton"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="246dp"
        android:layout_marginBottom="228dp"
        android:text="@string/OpenButton"></Button>

    <Button
        android:id="@+id/CloseButton"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="228dp"
        android:text="@string/CloseButton" />

    <TextView
        android:id="@+id/CurtainOpeningSelection"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="149dp"
        android:text="@string/CurtainControl"
        android:textColor="@color/white"
        android:textSize="20sp" />


    <SeekBar
        android:id="@+id/CurtainSeekbar"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="66dp"
        android:max="150"
        android:padding="10dp"
        android:paddingTop="10dp" />


</RelativeLayout>